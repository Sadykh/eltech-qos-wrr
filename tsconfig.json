{
  "compilerOptions": {
    "baseUrl": "./src",
    "lib": [
      "es5",
      "es6",
      "es2017",
      "esnext.asynciterable",
      "dom"
    ],
    "target": "es5",
    "module": "commonjs",
    "moduleResolution": "node",
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "outDir": "src/build",
    "sourceMap": true
  },
  "exclude": [
    "node_modules",
    "build"
  ]
}